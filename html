  <script>
      // a. String methods
    const text = 'Hello, World!';
    console.log('a. String methods:');
    console.log('Length:', text.length); // Output: 13
    console.log('Uppercase:', text.toUpperCase()); // Output: HELLO, WORLD!
    console.log('Substring:', text.substring(0, 5)); // Output: Hello
    console.log('Replace:', text.replace('Hello', 'Hi')); // Output: Hi, World!
    console.log('Split:', text.split(',')); // Output: ["Hello", " World!"]

    // b. Number methods
    const num = 42.567;
    console.log('\nb. Number methods:');
    console.log('Fixed:', num.toFixed(2)); // Output: 42.57
    console.log('Integer Part:', Math.floor(num)); // Output: 42
    console.log('Exponential:', num.toExponential(2)); // Output: 4.26e+1
    console.log('Precision:', num.toPrecision(4)); // Output: 42.57
    console.log('Absolute:', Math.abs(-7)); // Output: 7
    // c. Array methods
    const fruits = ['apple', 'banana', 'orange', 'grape'];
    console.log('\nc. Array methods:');
    console.log('Join:', fruits.join(', ')); // Output: "apple, banana, orange, grape"
    console.log('Index of "orange":', fruits.indexOf('orange')); // Output: 2
    console.log('Includes "kiwi":', fruits.includes('kiwi')); // Output: false
    console.log('Last item:', fruits[fruits.length - 1]); // Output: "grape"
    console.log('Sorted:', fruits.sort()); // Output: ["apple", "banana", "grape", "orange"]

    // d. Date methods
    const today = new Date();
    console.log('\nd. Date methods:');
    console.log('Current date:', today.toDateString()); // Output: Mon Jul 24 2023
    console.log('Current time:', today.toTimeString()); // Output: 16:08:45 GMT+0000 (Coordinated Universal Time)
    console.log('Day of the week (0-6):', today.getDay()); // Output: 1 (Monday)
    console.log('Month (0-11):', today.getMonth()); // Output: 6 (July)
    console.log('Year:', today.getFullYear()); // Output: 2023

    // e. Function methods
    function greet(name) {
      return 'Hello, ${name}!';
    }
    console.log('\ne. Function methods:');
    const sayHello = greet;
    console.log(sayHello('John')); // Output: Hello, John!
    const isEven = function(num) {
      return num % 2 === 0;
    };
    console.log('Is 4 even?', isEven(4)); // Output: true
  </script>
